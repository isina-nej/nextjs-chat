{
  "name": "nextjs-chat",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "node server.js",
    "lint": "eslint",
    "postinstall": "node -e \"const fs=require('fs'); const { execSync } = require('child_process'); const schema='./prisma/schema.prisma'; if (fs.existsSync(schema)) { console.log('Found prisma schema, running generate...'); execSync('npx prisma generate --schema='+schema, { stdio: 'inherit' }); } else { console.warn('No prisma schema found, skipping prisma generate.'); }\""
  },
  "prisma": {
    "schema": "prisma/schema.prisma"
  },
  "dependencies": {
    "@prisma/client": "^5.21.0",
    "bcryptjs": "^3.0.3",
    "dotenv": "^17.2.3",
    "formidable": "^3.5.4",
    "jsonwebtoken": "^9.0.3",
    "next": "16.1.1",
    "react": "19.2.3",
    "react-dom": "19.2.3",
    "sharp": "^0.34.5",
    "socket.io": "^4.8.3",
    "socket.io-client": "^4.8.3"
  },
  "devDependencies": {
    "@tailwindcss/postcss": "^4",
    "@types/bcryptjs": "^2.4.6",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/node": "^20.19.27",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "eslint": "^9",
    "eslint-config-next": "16.1.1",
    "prisma": "^5.21.0",
    "tailwindcss": "^4",
    "typescript": "^5"
  }
}
